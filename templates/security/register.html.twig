{# templates/security/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <section class="container-content py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h1 id="form-title" class="h5 mb-0">Cr√©er un compte</h1>
                    </div>

                    <div class="card-body">
                        {# Zone d‚Äôannonces #}
                        <div aria-live="polite" aria-atomic="true">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label == 'success' ? 'success' : (label in ['danger','error'] ? 'danger' : (label == 'warning' ? 'warning' : 'info')) }} mb-3" role="status">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>

                        {% if form_errors(form) %}
                            <div class="alert alert-danger" role="alert">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}

                        {{ form_start(form, { attr: { 'aria-labelledby': 'form-title', novalidate: 'novalidate' } }) }}

                        {# Email #}
                        {% if form.email is defined %}
                            <div class="mb-3">
                                {{ form_label(form.email, 'Email', { label_attr: { class: 'form-label' } }) }}
                                <div class="input-group">
                                    <span class="input-group-text" id="email-ico" aria-hidden="true">‚úâÔ∏è</span>
                                    {{ form_widget(form.email, {
                                        attr: {
                                            class: 'form-control',
                                            autocomplete: 'email',
                                            'aria-required': 'true',
                                            'aria-describedby': 'email-ico ' ~ form.email.vars.id ~ '_error',
                                            'aria-invalid': form.email.vars.valid ? 'false' : 'true'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(form.email) %}
                                    <div id="{{ form.email.vars.id }}_error" class="text-danger mt-1" role="alert">
                                        {{ form_errors(form.email) }}
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}

                        {# Nom & Pr√©nom #}
                        <div class="row">
                            <div class="col-md-6">
                                {% if form.nom is defined %}
                                    <div class="mb-3">
                                        {{ form_label(form.nom, 'Nom', { label_attr: { class: 'form-label' } }) }}
                                        <div class="input-group">
                                            <span class="input-group-text" id="nom-ico" aria-hidden="true">üë§</span>
                                            {{ form_widget(form.nom, {
                                                attr: {
                                                    class: 'form-control',
                                                    autocomplete: 'family-name',
                                                    'aria-required': 'true',
                                                    'aria-describedby': 'nom-ico ' ~ form.nom.vars.id ~ '_error',
                                                    'aria-invalid': form.nom.vars.valid ? 'false' : 'true'
                                                }
                                            }) }}
                                        </div>
                                        {% if form_errors(form.nom) %}
                                            <div id="{{ form.nom.vars.id }}_error" class="text-danger mt-1" role="alert">
                                                {{ form_errors(form.nom) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-6">
                                {% if form.prenom is defined %}
                                    <div class="mb-3">
                                        {{ form_label(form.prenom, 'Pr√©nom', { label_attr: { class: 'form-label' } }) }}
                                        <div class="input-group">
                                            <span class="input-group-text" id="prenom-ico" aria-hidden="true">üßë</span>
                                            {{ form_widget(form.prenom, {
                                                attr: {
                                                    class: 'form-control',
                                                    autocomplete: 'given-name',
                                                    'aria-required': 'true',
                                                    'aria-describedby': 'prenom-ico ' ~ form.prenom.vars.id ~ '_error',
                                                    'aria-invalid': form.prenom.vars.valid ? 'false' : 'true'
                                                }
                                            }) }}
                                        </div>
                                        {% if form_errors(form.prenom) %}
                                            <div id="{{ form.prenom.vars.id }}_error" class="text-danger mt-1" role="alert">
                                                {{ form_errors(form.prenom) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        {# Pr√©f√©rences (facultatif) #}
                        {% if form.preferences is defined %}
                            <div class="mb-3">
                                {{ form_label(form.preferences, 'Pr√©f√©rences', { label_attr: { class: 'form-label' } }) }}
                                {{ form_widget(form.preferences, {
                                    attr: {
                                        class: 'form-control',
                                        rows: '3',
                                        placeholder: 'D√©crivez vos pr√©f√©rences‚Ä¶',
                                        'aria-describedby': form.preferences.vars.id ~ '_error',
                                        'aria-invalid': form.preferences.vars.valid ? 'false' : 'true'
                                    }
                                }) }}
                                {% if form_errors(form.preferences) %}
                                    <div id="{{ form.preferences.vars.id }}_error" class="text-danger mt-1" role="alert">
                                        {{ form_errors(form.preferences) }}
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}

                        {# ====== MDP empil√©s (l‚Äôun sous l‚Äôautre) ====== #}
                        {% if form.password is defined %}
                            {# Mot de passe #}
                            <div class="mb-3">
                                {{ form_label(form.password, 'Mot de passe', { label_attr: { class: 'form-label' } }) }}
                                <div class="input-group">
                                    <span class="input-group-text" id="pwd1-ico" aria-hidden="true">üîí</span>
                                    {{ form_widget(form.password, {
                                        attr: {
                                            class: 'form-control',
                                            autocomplete: 'new-password',
                                            'aria-required': 'true',
                                            'aria-describedby': 'pwd1-ico ' ~ form.password.vars.id ~ '_error',
                                            'aria-invalid': form.password.vars.valid ? 'false' : 'true'
                                        }
                                    }) }}
                                </div>
                                {% if form_errors(form.password) %}
                                    <div id="{{ form.password.vars.id }}_error" class="text-danger mt-1" role="alert">
                                        {{ form_errors(form.password) }}
                                    </div>
                                {% endif %}
                            </div>

                            {# Confirmation #}
                            {% if form.confirmPassword is defined %}
                                <div class="mb-3">
                                    {{ form_label(form.confirmPassword, 'Confirmer le mot de passe', { label_attr: { class: 'form-label' } }) }}
                                    <div class="input-group">
                                        <span class="input-group-text" id="pwd2-ico" aria-hidden="true">‚úÖ</span>
                                        {{ form_widget(form.confirmPassword, {
                                            attr: {
                                                class: 'form-control',
                                                autocomplete: 'new-password',
                                                'aria-required': 'true',
                                                'aria-describedby': 'pwd2-ico ' ~ form.confirmPassword.vars.id ~ '_error',
                                                'aria-invalid': form.confirmPassword.vars.valid ? 'false' : 'true'
                                            }
                                        }) }}
                                    </div>
                                    {% if form_errors(form.confirmPassword) %}
                                        <div id="{{ form.confirmPassword.vars.id }}_error" class="text-danger mt-1" role="alert">
                                            {{ form_errors(form.confirmPassword) }}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}

                        {% elseif form.plainPassword is defined %}
                            {# RepeatedType: first puis second #}
                            {% if form.plainPassword.first is defined %}
                                <div class="mb-3">
                                    {{ form_label(form.plainPassword.first, 'Mot de passe', { label_attr: { class: 'form-label' } }) }}
                                    <div class="input-group">
                                        <span class="input-group-text" id="pwd1-ico" aria-hidden="true">üîí</span>
                                        {{ form_widget(form.plainPassword.first, {
                                            attr: {
                                                class: 'form-control',
                                                autocomplete: 'new-password',
                                                'aria-required': 'true',
                                                'aria-describedby': 'pwd1-ico ' ~ form.plainPassword.first.vars.id ~ '_error',
                                                'aria-invalid': form.plainPassword.first.vars.valid ? 'false' : 'true'
                                            }
                                        }) }}
                                    </div>
                                    {% if form_errors(form.plainPassword.first) %}
                                        <div id="{{ form.plainPassword.first.vars.id }}_error" class="text-danger mt-1" role="alert">
                                            {{ form_errors(form.plainPassword.first) }}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}

                            {% if form.plainPassword.second is defined %}
                                <div class="mb-3">
                                    {{ form_label(form.plainPassword.second, 'Confirmer le mot de passe', { label_attr: { class: 'form-label' } }) }}
                                    <div class="input-group">
                                        <span class="input-group-text" id="pwd2-ico" aria-hidden="true">‚úÖ</span>
                                        {{ form_widget(form.plainPassword.second, {
                                            attr: {
                                                class: 'form-control',
                                                autocomplete: 'new-password',
                                                'aria-required': 'true',
                                                'aria-describedby': 'pwd2-ico ' ~ form.plainPassword.second.vars.id ~ '_error',
                                                'aria-invalid': form.plainPassword.second.vars.valid ? 'false' : 'true'
                                            }
                                        }) }}
                                    </div>
                                    {% if form_errors(form.plainPassword.second) %}
                                        <div id="{{ form.plainPassword.second.vars.id }}_error" class="text-danger mt-1" role="alert">
                                            {{ form_errors(form.plainPassword.second) }}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endif %}

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Cr√©er mon compte</button>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">J‚Äôai d√©j√† un compte</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <p class="text-muted small mt-3">
                    En cr√©ant un compte, vous acceptez nos
                    <a href="{#  {{ path('mentions_legales') }}#}" class="link-secondary">conditions d‚Äôutilisation</a>.
                </p>
            </div>
        </div>
    </section>
{% endblock %}
