{# templates/security/register.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}

{# Si tu n'as pas d√©j√† d√©fini le th√®me Bootstrap globalement #}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block content %}
    <section class="container-content py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h1 id="form-title" class="h5 mb-0">Cr√©er un compte</h1>
                    </div>

                    <div class="card-body">
                        {# Flash messages #}
                        <div aria-live="polite" aria-atomic="true">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label in ['danger','error'] ? 'danger' : (label == 'warning' ? 'warning' : (label == 'success' ? 'success' : 'info')) }} mb-3" role="status">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>

                        {# Bandeau si le formulaire est invalide #}
                        {% if form.vars.submitted and not form.vars.valid %}
                            <div class="alert alert-danger" role="alert">
                                Veuillez corriger les erreurs ci-dessous.
                            </div>
                        {% endif %}

                        {{ form_start(form, { attr: { 'aria-labelledby': 'form-title', novalidate: 'novalidate' } }) }}

                        {# ================== EMAIL ================== #}
                        {% set emailInvalid = form.vars.submitted and (form.email.vars.errors|length > 0) %}
                        <div class="mb-3">
                            {{ form_label(form.email, 'Email', { label_attr: { class: 'form-label' } }) }}
                            <div class="input-group">
                                <span class="input-group-text" id="email-ico" aria-hidden="true">‚úâÔ∏è</span>
                                {{ form_widget(form.email, {
                                    attr: {
                                        class: 'form-control' ~ (emailInvalid ? ' is-invalid' : ''),
                                        autocomplete: 'email',
                                        'aria-required': 'true',
                                        'aria-describedby': 'email-ico ' ~ form.email.vars.id ~ '_error',
                                        'aria-invalid': emailInvalid ? 'true' : 'false'
                                    }
                                }) }}
                            </div>
                            {% if emailInvalid %}
                                <div id="{{ form.email.vars.id }}_error" class="invalid-feedback d-block">
                                    {{ form_errors(form.email) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="row">
                            {# ================== NOM ================== #}
                            {% set nomInvalid = form.vars.submitted and (form.nom.vars.errors|length > 0) %}
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.nom, 'Nom', { label_attr: { class: 'form-label' } }) }}
                                    <div class="input-group">
                                        <span class="input-group-text" id="nom-ico" aria-hidden="true">üë§</span>
                                        {{ form_widget(form.nom, {
                                            attr: {
                                                class: 'form-control' ~ (nomInvalid ? ' is-invalid' : ''),
                                                autocomplete: 'family-name',
                                                'aria-required': 'true',
                                                'aria-describedby': 'nom-ico ' ~ form.nom.vars.id ~ '_error',
                                                'aria-invalid': nomInvalid ? 'true' : 'false'
                                            }
                                        }) }}
                                    </div>
                                    {% if nomInvalid %}
                                        <div id="{{ form.nom.vars.id }}_error" class="invalid-feedback d-block">
                                            {{ form_errors(form.nom) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            {# ================== PR√âNOM ================== #}
                            {% set prenomInvalid = form.vars.submitted and (form.prenom.vars.errors|length > 0) %}
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.prenom, 'Pr√©nom', { label_attr: { class: 'form-label' } }) }}
                                    <div class="input-group">
                                        <span class="input-group-text" id="prenom-ico" aria-hidden="true">üßë</span>
                                        {{ form_widget(form.prenom, {
                                            attr: {
                                                class: 'form-control' ~ (prenomInvalid ? ' is-invalid' : ''),
                                                autocomplete: 'given-name',
                                                'aria-required': 'true',
                                                'aria-describedby': 'prenom-ico ' ~ form.prenom.vars.id ~ '_error',
                                                'aria-invalid': prenomInvalid ? 'true' : 'false'
                                            }
                                        }) }}
                                    </div>
                                    {% if prenomInvalid %}
                                        <div id="{{ form.prenom.vars.id }}_error" class="invalid-feedback d-block">
                                            {{ form_errors(form.prenom) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        {# ================== PR√âF√âRENCES ================== #}
                        {% set prefInvalid = form.vars.submitted and (form.preferences.vars.errors|length > 0) %}
                        <div class="mb-3">
                            {{ form_label(form.preferences, 'Pr√©f√©rences', { label_attr: { class: 'form-label' } }) }}
                            {{ form_widget(form.preferences, {
                                attr: {
                                    class: 'form-control' ~ (prefInvalid ? ' is-invalid' : ''),
                                    rows: '3',
                                    placeholder: 'D√©crivez vos pr√©f√©rences‚Ä¶',
                                    'aria-describedby': form.preferences.vars.id ~ '_error',
                                    'aria-invalid': prefInvalid ? 'true' : 'false'
                                }
                            }) }}
                            {% if prefInvalid %}
                                <div id="{{ form.preferences.vars.id }}_error" class="invalid-feedback d-block">
                                    {{ form_errors(form.preferences) }}
                                </div>
                            {% endif %}
                        </div>

                        {# ================== MOT DE PASSE + CONFIRMATION ================== #}
                        {% if form.password is defined %}
                            {% set pwdInvalid = form.vars.submitted and (form.password.vars.errors|length > 0) %}
                            <div class="mb-3">
                                {{ form_label(form.password, 'Mot de passe', { label_attr: { class: 'form-label' } }) }}
                                <div class="input-group">
                                    <span class="input-group-text" id="pwd1-ico" aria-hidden="true">üîí</span>
                                    {{ form_widget(form.password, {
                                        attr: {
                                            class: 'form-control' ~ (pwdInvalid ? ' is-invalid' : ''),
                                            autocomplete: 'new-password',
                                            'aria-required': 'true',
                                            'aria-describedby': 'pwd1-ico ' ~ form.password.vars.id ~ '_error',
                                            'aria-invalid': pwdInvalid ? 'true' : 'false'
                                        }
                                    }) }}
                                </div>
                                {% if pwdInvalid %}
                                    <div id="{{ form.password.vars.id }}_error" class="invalid-feedback d-block">
                                        {{ form_errors(form.password) }}
                                    </div>
                                {% else %}
                                    <div class="form-text">
                                        Minimum 8 caract√®res, avec au moins une majuscule, une minuscule et un chiffre.
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}

                        {% if form.confirmPassword is defined %}
                            {% set confInvalid = form.vars.submitted and (form.confirmPassword.vars.errors|length > 0) %}
                            <div class="mb-3">
                                {{ form_label(form.confirmPassword, 'Confirmer le mot de passe', { label_attr: { class: 'form-label' } }) }}
                                <div class="input-group">
                                    <span class="input-group-text" id="pwd2-ico" aria-hidden="true">‚úÖ</span>
                                    {{ form_widget(form.confirmPassword, {
                                        attr: {
                                            class: 'form-control' ~ (confInvalid ? ' is-invalid' : ''),
                                            autocomplete: 'new-password',
                                            'aria-required': 'true',
                                            'aria-describedby': 'pwd2-ico ' ~ form.confirmPassword.vars.id ~ '_error',
                                            'aria-invalid': confInvalid ? 'true' : 'false'
                                        }
                                    }) }}
                                </div>
                                {% if confInvalid %}
                                    <div id="{{ form.confirmPassword.vars.id }}_error" class="invalid-feedback d-block">
                                        {{ form_errors(form.confirmPassword) }}
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Cr√©er mon compte</button>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">J‚Äôai d√©j√† un compte</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <p class="text-muted small mt-3">
                    En cr√©ant un compte, vous acceptez nos
                    <a href="#" class="link-secondary">conditions d‚Äôutilisation</a>.
                </p>
            </div>
        </div>
    </section>
{% endblock %}
