{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block page_title %}Se connecter{% endblock %}

{% block content %}
    <div class="row justify-content-center my-5">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="h5 mb-0">Connexion à votre compte</h2>
                </div>

                <div class="card-body">
                    {# Message si déjà connecté #}
                    {% if app.user %}
                        <div class="alert alert-info d-flex justify-content-between align-items-center" role="status" aria-live="polite">
                            <span>Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>.</span>
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <a class="btn btn-outline-primary" href="{{ path('utilisateurs_dashboard') }}">Aller au tableau de bord</a>
                        </div>
                    {% endif %}

                    {# Erreur d'authentification (si présente) #}
                    {% if error %}
                        <div class="alert alert-danger" role="alert" aria-live="assertive">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}" novalidate aria-describedby="login-help">
                        <div id="login-help" class="visually-hidden">
                            Saisissez votre email et votre mot de passe pour vous connecter.
                        </div>

                        <div class="mb-3">
                            <label for="username" class="form-label">Email</label>
                            <input
                                    type="email"
                                    id="username"
                                    name="_username"
                                    class="form-control"
                                    value="{{ last_username }}"
                                    autocomplete="email"
                                    required
                                    autofocus
                                    aria-required="true"
                            >
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input
                                    type="password"
                                    id="password"
                                    name="_password"
                                    class="form-control"
                                    autocomplete="current-password"
                                    required
                                    aria-required="true"
                            >
                        </div>

                        {# CSRF #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# (Option) case à cocher "Se souvenir de moi" si tu actives remember_me dans security.yaml
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" value="on" id="remember_me" name="_remember_me">
              <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
            </div>
                        #}
                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <a href="{{ path('app_forgot_password_request') }}" class="link-secondary">
                                    Mot de passe oublié ?
                                </a>
                            </small>
                        </div>


                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">Se connecter</button>
                            <a href="{{ path('app_inscription') }}" class="btn btn-outline-secondary">Créer un compte</a>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-muted small mt-3">
                Besoin d’un compte ? <a href="{{ path('app_inscription') }}">Inscrivez-vous</a>.
            </p>
        </div>
    </div>
{% endblock %}
