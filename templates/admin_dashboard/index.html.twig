{# templates/admin/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}
{% block page_title %}Tableau de bord administrateur{% endblock %}

{% block content %}
    <div class="row g-4">

        <section class="col-12 col-md-6 col-lg-3" role="region" aria-labelledby="card-recettes">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h2 id="card-recettes" class="h5 card-title">👨‍🍳 Recettes</h2>
                    <p class="card-text">Gérez les recettes créées par les utilisateurs.</p>
                    <a href="{{ path('recette_liste_admin') }}" class="btn btn-primary">Gérer les recettes</a>
                </div>
            </div>
        </section>

        <section class="col-12 col-md-6 col-lg-3" role="region" aria-labelledby="card-commentaires">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h2 id="card-commentaires" class="h5 card-title">💬 Commentaires</h2>

                    <div class="d-flex flex-column gap-2 mb-2">
                        <a href="{{ path('commentaire_signales') }}" class="btn btn-outline-warning">
                            Signalés
                            <span class="badge text-bg-danger ms-1">{{ nbSignalements|default(0) }}</span>
                        </a>
                        <a href="{{ path('commentaire_index') }}" class="btn btn-danger">Modérer les commentaires</a>
                    </div>

                    <p class="card-text mb-0">Modérez les commentaires signalés ou inappropriés.</p>
                </div>
            </div>
        </section>

        <section class="col-12 col-md-6 col-lg-3" role="region" aria-labelledby="card-articles">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h2 id="card-articles" class="h5 card-title">📰 Articles</h2>
                    <p class="card-text">Publiez ou modifiez des articles informatifs.</p>
                    <a href="{{ path('article_liste_admin') }}" class="btn btn-primary">Gérer les articles</a>
                </div>
            </div>
        </section>

        <section class="col-12 col-md-6 col-lg-3" role="region" aria-labelledby="card-users">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h2 id="card-users" class="h5 card-title">👥 Utilisateurs</h2>
                    <p class="card-text">Consultez la liste des utilisateurs inscrits.</p>
                    <a href="{{ path('utilisateurs_liste') }}" class="btn btn-primary">Gérer les utilisateurs</a>
                </div>
            </div>
        </section>

    </div>

    <p class="text-muted mt-4">
        Connecté en tant que : <strong>{{ app.user.email }}</strong>
    </p>
{% endblock %}
