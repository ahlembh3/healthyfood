{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block page_title %}Tableau de bord administrateur{% endblock %}

{% block content %}
    <div class="container">
        <div class="row g-4">

            <div class="col-md-4">
                <div class="card border-success shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">👨‍🍳 Recettes</h5>
                        <p class="card-text">Gérez les recettes créées par les utilisateurs.</p>
                        <a href="{{ path('recette_liste_admin') }}" class="btn btn-success">Gérer les recettes</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-danger shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">💬 Commentaires</h5>

                        <a href="{{ path('commentaire_signales') }}" class="btn btn-outline-warning">
                            Signalés <span class="badge bg-danger">{{ nbSignalements }}</span>
                        </a>
                        <a href="{{ path('commentaire_signales') }}" class="btn btn-outline-warning btn-sm mt-2">Voir les signalés</a>

                        <p class="card-text">Modérez les commentaires signalés ou inappropriés.</p>
                        <a href="{{ path('commentaire_index') }}" class="btn btn-danger">Modérer les commentaires</a>
                    </div>
                </div>
            </div>




            <div class="col-md-4">
                <div class="card border-warning shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">📰 Articles</h5>
                        <p class="card-text">Publiez ou modifiez des articles informatifs.</p>
                        <a href="{{ path('article_liste_admin') }}" class="btn btn-warning">Gérer les articles</a>
                    </div>
                </div>
            </div>



            <div class="col-md-4">
                <div class="card border-dark shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">👥 Utilisateurs</h5>
                        <p class="card-text">Consultez la liste des utilisateurs inscrits.</p>
                        <a href="{{ path('utilisateurs_liste') }}" class="btn btn-dark">Gérer les utilisateurs</a>
                    </div>
                </div>
            </div>

        </div>

        <div class="mt-5">
            <p class="text-muted">Connecté en tant que : <strong>{{ app.user.email }}</strong></p>
        </div>
    </div>
{% endblock %}
