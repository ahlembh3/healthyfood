{% macro row(view=null, edit=null, del=null) %}
    {% set view = view ?? {} %}
    {% set edit = edit ?? {} %}
    {% set del  = del  ?? {} %}

    {% set vlabel = view.label  is defined ? view.label  : 'Voir' %}
    {% set elabel = edit.label  is defined ? edit.label  : 'Modifier' %}
    {% set dlabel = del.label   is defined ? del.label   : 'Supprimer' %}
    {% set dmsg   = del.confirm is defined ? del.confirm : 'Confirmer la suppression ?' %}

    <div class="actions" role="group" aria-label="Actions">
        {% if view.href is defined %}
            <a href="{{ view.href|default('#') }}" class="btn btn-outline-primary btn-sm px-3 actions__btn" aria-label="{{ vlabel }}">
                <i class="bi bi-eye actions__icon" aria-hidden="true"></i>
                <span class="actions__label d-none d-sm-inline">{{ vlabel }}</span>
            </a>
        {% endif %}

        {% if edit.href is defined %}
            <a href="{{ edit.href|default('#') }}" class="btn btn-secondary btn-sm px-3 actions__btn" aria-label="{{ elabel }}">
                <i class="bi bi-pencil actions__icon" aria-hidden="true"></i>
                <span class="actions__label d-none d-sm-inline">{{ elabel }}</span>
            </a>
        {% endif %}

        {% if del.href is defined %}
            <form method="post" action="{{ del.href|default('#') }}" class="m-0 actions__form"
                  onsubmit="return confirm('{{ dmsg|e('js') }}');">
                {% if del.token is defined %}
                    <input type="hidden" name="_token" value="{{ del.token }}">
                {% endif %}
                <button type="submit" class="btn btn-danger btn-sm px-3 actions__btn"
                        aria-label="{{ dlabel }}"
                        {% if del.disabled|default(false) %}disabled aria-disabled="true"{% endif %}>
                    <i class="bi bi-trash actions__icon" aria-hidden="true"></i>
                    <span class="actions__label d-none d-sm-inline">{{ dlabel }}</span>
                </button>
            </form>
        {% endif %}
    </div>
{% endmacro %}
