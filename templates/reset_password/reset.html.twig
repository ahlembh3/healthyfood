{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Nouveau mot de passe{% endblock %}
{% block page_title %}Définir un nouveau mot de passe{% endblock %}
{% block content %}
    <div class="row justify-content-center my-5">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header"><h2 class="h5 mb-0">Définir un nouveau mot de passe</h2></div>
                <div class="card-body">
                    {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword.first, {
                        label: 'Nouveau mot de passe',
                        attr: { autocomplete: 'new-password' }
                    }) }}
                    {{ form_row(resetForm.plainPassword.second, {
                        label: 'Confirmer le mot de passe',
                        attr: { autocomplete: 'new-password' }
                    }) }}
                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary">Valider</button>
                    </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
