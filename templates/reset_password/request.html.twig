{# templates/reset_password/request.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Mot de passe oublié{% endblock %}
{% block page_title %}Réinitialiser le mot de passe{% endblock %}
{% block content %}
    <div class="row justify-content-center my-5">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header"><h2 class="h5 mb-0">Mot de passe oublié</h2></div>
                <div class="card-body">
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    <p class="text-muted">Entrez l’adresse email de votre compte. Si elle existe, vous recevrez un lien de réinitialisation.</p>
                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email, {
                        label: 'Email',
                        attr: { autocomplete: 'email', placeholder: 'votre@email.fr' }
                    }) }}
                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary">Envoyer le lien</button>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">Retour à la connexion</a>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
