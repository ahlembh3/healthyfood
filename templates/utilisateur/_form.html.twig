<div class="d-flex justify-content-center mt-5">
    <div class="card shadow p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4">Cr√©er un compte</h2>

        {{ form_start(form) }}

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.prenom) }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.prenom) }}
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.nom) }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.nom) }}
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.email) }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.password) }}</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                </div>
                {{ form_errors(form.password) }}
            </div>

            <div class="mb-3">
                <label class="form-label">{{ form_label(form.preferences) }}</label>
                {{ form_widget(form.preferences, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                {{ form_errors(form.preferences) }}
            </div>

            <button type="submit" class="btn btn-primary w-100">
                {{ button_label|default('S\'inscrire') }}
            </button>

        {{ form_end(form) }}
    </div>
</div>
