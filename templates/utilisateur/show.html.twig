{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}
{% block page_title %}Fiche utilisateur{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <caption class="visually-hidden">
                Informations de l’utilisateur : email, rôles, nom, prénom, préférences.
            </caption>
            <tbody>
            <tr>
                <th scope="row">Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th scope="row">Rôles</th>
                <td>
                    {% if utilisateur.roles is not empty %}
                        {% for role in utilisateur.roles %}
                            <span class="badge text-bg-success me-1">{{ role }}</span>
                        {% endfor %}
                    {% else %}
                        <span class="text-muted">Aucun</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th scope="row">Nom</th>
                <td>{{ utilisateur.nom ?: '—' }}</td>
            </tr>
            <tr>
                <th scope="row">Prénom</th>
                <td>{{ utilisateur.prenom ?: '—' }}</td>
            </tr>
            <tr>
                <th scope="row">Préférences</th>
                <td>{{ utilisateur.preferences ?: '—' }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    {# Variables de confort #}
    {% set isSelf  = app.user and app.user.id == utilisateur.id %}
    {% set isAdmin = is_granted('ROLE_ADMIN') %}

    {# Choix du tableau de bord selon le rôle (assume une route 'admin_dashboard') #}
    {% if isSelf %}
        {% set dashboardUrl = isAdmin ? path('admin_dashboard') : path('utilisateurs_dashboard') %}
    {% endif %}

    <div class="d-flex flex-wrap gap-2 mt-4">
        {# 1) Modifier mon profil (seulement si je vois ma propre fiche) #}
        {% if isSelf %}
            <a href="{{ path('utilisateurs_modifier_mon_profil') }}" class="btn btn-outline-primary">
                Modifier mon profil
            </a>
        {% endif %}

        {# 2) Mon tableau de bord (seulement si je vois ma propre fiche, lien selon rôle) #}
        {% if isSelf %}
            <a href="{{ dashboardUrl }}" class="btn btn-outline-secondary">
                Mon tableau de bord
            </a>
        {% endif %}

        {# 3) Supprimer (uniquement pour un admin). Si admin regarde sa propre fiche: bouton désactivé. #}
        {% if isAdmin %}
            <form method="post"
                  action="{{ path('utilisateurs_supprimer', { id: utilisateur.id }) }}"
                  class="d-inline"
                  onsubmit="return {{ isSelf ? 'false' : 'confirm(\'Supprimer « ' ~ (utilisateur.email ?: 'cet utilisateur') ~ ' » ? Cette action est irréversible.\')' }};">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                <button
                        class="btn btn-danger"
                        {% if isSelf %}disabled aria-disabled="true" title="Vous ne pouvez pas supprimer votre propre compte."{% endif %}>
                    Supprimer
                </button>
            </form>
        {% endif %}
    </div>
{% endblock %}
