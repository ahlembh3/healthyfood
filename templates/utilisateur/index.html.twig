{# templates/utilisateur/index.html.twig #}
{% extends 'base.html.twig' %}
{% import 'admin_dashboard/_actions.html.twig' as A %}

{% block title %}Liste des utilisateurs{% endblock %}
{% block page_title %}Liste des utilisateurs{% endblock %}

{% block content %}
    <section class="mb-3">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">
            <p class="mb-0 text-muted">Gestion des comptes (administration)</p>
            <div class="ms-sm-auto">
                <a href="{{ path('utilisateurs_ajouter') }}" class="btn btn-primary">
                    <i class="bi bi-person-plus me-1" aria-hidden="true"></i>
                    Ajouter un utilisateur
                </a>
            </div>
        </div>
    </section>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <caption class="visually-hidden">
                        Tableau listant les utilisateurs avec actions Voir, Modifier et Supprimer.
                    </caption>

                    <thead class="table-light">
                    <tr>
                        <th scope="col" style="width:80px;">ID</th>
                        <th scope="col">Email</th>

                        {# Nom : affiché ≥ md #}
                        <th scope="col" class="d-none d-md-table-cell">Nom</th>
                        {# Prénom : affiché ≥ lg #}
                        <th scope="col" class="d-none d-lg-table-cell">Prénom</th>
                        {# Rôles : affiché ≥ lg #}
                        <th scope="col" class="d-none d-lg-table-cell">Rôles</th>

                        {# Colonne Actions compacte, évite l'effet “demi-bouton” #}
                        <th scope="col" class="text-end" style="width:1%; white-space:nowrap;">Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for utilisateur in utilisateurs %}
                        <tr>
                            <th scope="row">{{ utilisateur.id }}</th>

                            <td class="text-break">{{ utilisateur.email }}</td>

                            <td class="text-break d-none d-md-table-cell">{{ utilisateur.nom ?: '—' }}</td>
                            <td class="text-break d-none d-lg-table-cell">{{ utilisateur.prenom ?: '—' }}</td>

                            <td class="d-none d-lg-table-cell">
                                {% if utilisateur.roles is not empty %}
                                    <div class="d-flex flex-wrap gap-1">
                                        {% for role in utilisateur.roles %}
                                            {% set label = role == 'ROLE_ADMIN' ? 'Admin' : (role == 'ROLE_USER' ? 'Utilisateur' : role) %}
                                            <span class="badge rounded-pill {{ role == 'ROLE_ADMIN' ? 'text-bg-success' : 'text-bg-secondary' }}">
                        {{ label }}
                      </span>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>

                            <td class="text-end">
                                {{ A.row(
                                    { href: path('utilisateurs_afficher', { id: utilisateur.id }), label: 'Voir' },
                                    { href: path('utilisateurs_modifier', { id: utilisateur.id }), label: 'Modifier' },
                                    {
                                        href: path('utilisateurs_supprimer', { id: utilisateur.id }),
                                        label: 'Supprimer',
                                        token: csrf_token('delete' ~ utilisateur.id),
                                        confirm: 'Supprimer « ' ~ (utilisateur.email ?: 'cet utilisateur') ~ ' » ?',
                                        disabled: app.user and app.user.id == utilisateur.id
                                    }
                                ) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Aucun utilisateur trouvé.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
