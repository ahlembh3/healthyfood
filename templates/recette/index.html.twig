{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des recettes</h1>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Instructions</th>
            <th>Préparation</th>
            <th>Difficulté</th>
            <th>Validation</th>
            <th>Portions</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.titre }}</td>
                <td>{{ recette.description|u.truncate(60) }}</td>
                <td>{{ recette.instructions|u.truncate(60) }}</td>
                <td>{{ recette.tempsPreparation }} min</td>
                <td>{{ recette.difficulte }}</td>
                <td>
                    {% if recette.validation %}
                        <span class="badge bg-success">Validée</span>
                    {% else %}
                        <form method="post" action="{{ path('recette_valider', {'id': recette.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ recette.id) }}">
                            <button class="btn btn-warning btn-sm">Valider</button>
                        </form>
                    {% endif %}
                </td>
                <td>{{ recette.portions }}</td>
                <td>
                    {% if moyennes[recette.id] is defined %}
                        <span class="badge bg-info">{{ moyennes[recette.id] }}/5</span>
                    {% else %}
                        <span class="text-muted">Pas notée</span>
                    {% endif %}
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a href="{{ path('recette_show', {'id': recette.id}) }}" class="btn btn-outline-primary btn-sm">Voir</a>
                        <a href="{{ path('recette_edit', {'id': recette.id}) }}" class="btn btn-outline-secondary btn-sm">Modifier</a>
                        <form method="post" action="{{ path('recette_delete', {'id': recette.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
                            <button class="btn btn-outline-danger btn-sm">Supprimer</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10" class="text-center">Aucune recette trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_new') }}" class="btn btn-success mt-3">Ajouter une nouvelle recette</a>
{% endblock %}
