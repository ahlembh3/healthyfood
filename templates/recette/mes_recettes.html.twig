{% extends 'base.html.twig' %}

{% block title %}Mes recettes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Mes recettes</h1>

        {% if recettes is empty %}
            <div class="alert alert-info">
                Vous n'avez encore créé aucune recette.
            </div>
        {% else %}
            <div class="row">
                {% for recette in recettes %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            {% if recette.image %}
                                <img src="{{ asset('uploads/' ~ recette.image) }}" class="card-img-top" alt="{{ recette.titre }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ recette.titre }}</h5>
                                <p class="card-text">{{ recette.description|u.truncate(100, '...') }}</p>

                                {% if recette.difficulte %}
                                    <span class="badge bg-secondary">{{ recette.difficulte }}</span>
                                {% endif %}

                                {% if recette.tempsPreparation %}
                                    <p class="mt-2"><strong>Préparation :</strong> {{ recette.tempsPreparation }} min</p>
                                {% endif %}
                                {% if recette.tempsCuisson %}
                                    <p><strong>Cuisson :</strong> {{ recette.tempsCuisson }} min</p>
                                {% endif %}
                            </div>

                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <a class="btn btn-outline-success"
                                   href="{{ path('recette_show', {'id': recette.id, 'from': 'mes'}) }}">
                                    Voir la recette
                                </a>

                                {% if not recette.validation %}
                                    <div class="btn-group">
                                        <a href="{{ path('recette_edit', { id: recette.id }) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>

                                        <form method="post" action="{{ path('recette_delete', { id: recette.id }) }}" onsubmit="return confirm('Confirmer la suppression ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
                                            <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
