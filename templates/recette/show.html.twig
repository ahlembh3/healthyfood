{% extends 'base.html.twig' %}

{% block title %}{{ recette.titre }} ‚Äî Recette{% endblock %}

{% block body %}
    <div class="container my-5">

        <h1 class="mb-4 text-center">{{ recette.titre }}</h1>

        {# --- Grande image --- #}
        <div class="mb-4">

            {% set img = recette.image|default('') %}
            <img
                    src="{% if img %}
         {% if img starts with 'http' %}
           {{ img }}
         {% else %}
           {{ asset(img starts with 'uploads/' ? img : 'uploads/recettes/' ~ img) }}
         {% endif %}
       {% else %}
         {{ asset('images/placeholder-recipe.jpg') }}
       {% endif %}"
                    alt="{{ recette.titre }}"
                    class="img-fluid rounded shadow w-100"
                    style="max-height:480px;object-fit:cover;"
                    onerror="this.onerror=null;this.src='{{ asset('images/placeholder-recipe.jpg') }}';"
            />
        </div>

        <div class="row g-4">
            {# --- R√©sum√© infos pratiques --- #}
            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">‚ÑπÔ∏è Infos pratiques</h5>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Pr√©paration :</strong> {{ recette.tempsPreparation }} min</li>
                            {% if recette.tempsCuisson is not null %}
                                <li><strong>Cuisson :</strong> {{ recette.tempsCuisson }} min</li>
                            {% endif %}
                            <li><strong>Difficult√© :</strong> {{ recette.difficulte ?? '‚Äî' }}</li>
                            <li><strong>Portions :</strong> {{ recette.portions ?? 1 }} personne(s)</li>
                        </ul>
                    </div>
                </div>
            </div>

            {# --- Ingr√©dients --- #}
            <div class="col-lg-5">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">üì¶ Ingr√©dients</h5>

                        {% if recette.recetteIngredients is not empty %}
                            <ul class="mb-0">
                                {% for ri in recette.recetteIngredients %}
                                    {% set ing = ri.ingredient %}
                                    <li>
                                        {% if ing %}
                                            <strong>{{ ing.nom }}</strong> ‚Äî {{ ri.quantite }}
                                            {% if ing.unite %} {{ ing.unite }}{% endif %}
                                            {% if ing.allergenes %}<span class="badge text-bg-warning ms-2">Allerg√®nes : {{ ing.allergenes }}</span>{% endif %}
                                        {% else %}
                                            <em>Ingr√©dient supprim√©</em>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted mb-0">Aucun ingr√©dient.</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# --- Encadr√© nutritionnel (‚âà pour 1 recette) --- #}
            <div class="col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">üçΩÔ∏è Valeurs nutritionnelles</h5>

                        {# Totaux calcul√©s √† partir des ingr√©dients en gramme / millilitre #}
                        {% set calories = 0 %}
                        {% set proteines = 0 %}
                        {% set glucides  = 0 %}
                        {% set lipides   = 0 %}

                        {% for ri in recette.recetteIngredients %}
                            {% set ing = ri.ingredient %}
                            {% if ing and (ing.unite in ['gramme','millilitre']) %}
                                {% set factor = (ri.quantite / 100) %}
                                {% set calories = calories + (ing.calories   ?? 0) * factor %}
                                {% set proteines = proteines + (ing.proteines ?? 0) * factor %}
                                {% set glucides  = glucides  + (ing.glucides  ?? 0) * factor %}
                                {% set lipides   = lipides   + (ing.lipides   ?? 0) * factor %}
                            {% endif %}
                        {% endfor %}

                        <table class="table table-sm mb-2">
                            <tbody>
                            <tr><th scope="row">Calories</th><td>{{ calories|round(0, 'common') }} kcal</td></tr>
                            <tr><th scope="row">Prot√©ines</th><td>{{ proteines|round(1, 'common') }} g</td></tr>
                            <tr><th scope="row">Glucides</th><td>{{ glucides|round(1, 'common') }} g</td></tr>
                            <tr><th scope="row">Lipides</th><td>{{ lipides|round(1, 'common') }} g</td></tr>
                            </tbody>
                        </table>

                        <small class="text-muted d-block">
                            * Calcul bas√© sur les ingr√©dients en g/ml (‚âà pour 100 g/ml).
                            Les unit√©s en ‚Äúpi√®ce/gousse‚Äù ne sont pas comptabilis√©es.
                        </small>
                    </div>
                </div>
            </div>
        </div>

        {# --- √âtapes num√©rot√©es --- #}
        <div class="card shadow-sm my-4">
            <div class="card-body">
                <h5 class="card-title mb-3">üë®‚Äçüç≥ √âtapes</h5>
                {% set instr = recette.instructions|default('') %}

                {# Si on d√©tecte du HTML, on affiche tel quel #}
                {% if instr matches('/<[^>]+>/') %}
                    <div class="content-body">
                        {{ instr|raw }}
                    </div>
                {% else %}
                    {# Sinon on normalise les retours √† la ligne (g√®re aussi les <br> r√©siduels) #}
                    {% set normalized = instr|replace({'<br>':'\n','<br/>':'\n','<br />':'\n'})|striptags %}
                    {% set steps = normalized|split('\n')|filter(s => s|trim != '') %}
                    {% if steps is not empty %}
                        <ol class="mb-0">
                            {% for step in steps %}
                                <li class="mb-2">{{ step|trim }}</li>
                            {% endfor %}
                        </ol>
                    {% else %}
                        <p class="text-muted mb-0">Aucune instruction d√©taill√©e.</p>
                    {% endif %}
                {% endif %}
            </div>
        </div>


        {# --- Suggestions de tisanes associ√©es --- #}
        {% if tisanesSuggerees is defined and tisanesSuggerees|length > 0 %}
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">üåø Tisanes sugg√©r√©es</h5>

                    <div class="row g-3">
                        {% for tisane in tisanesSuggerees %}
                            <div class="col-md-4">
                                <div class="border rounded h-100 p-3 d-flex">
                                    <img
                                            src="{{ tisane.image ? asset('uploads/tisanes/' ~ tisane.image) : asset('images/placeholder-tea.jpg') }}"
                                            alt="{{ tisane.nom }}"
                                            class="rounded me-3"
                                            style="width:80px;height:80px;object-fit:cover;"
                                    >
                                    <div>
                                        <a href="{{ path('tisane_show', {'id': tisane.id}) }}" class="fw-semibold d-block mb-1">
                                            {{ tisane.nom }}
                                        </a>

                                        {# Liste courte des bienfaits (compatible toutes versions de Twig) #}
                                        {% if tisane.bienfaits|default([])|length > 0 %}
                                            <small class="text-muted d-block">
                                                Bienfaits :
                                                {% for b in tisane.bienfaits %}
                                                    {{ loop.first ? '' : ', ' }}{{ b.nom }}
                                                {% endfor %}
                                            </small>
                                        {% endif %}



                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}


        {# --- Note moyenne (si tu veux la garder) --- #}
        {% if moyenne is defined %}
            <div class="mb-3">
                <h6>‚≠ê Note moyenne</h6>
                {% if moyenne is not null %}
                    {% for i in 1..5 %}
                        {{ i <= moyenne ? '‚≠ê' : '‚òÜ' }}
                    {% endfor %}
                    ({{ moyenne|number_format(1, '.', ' ') }}/5)
                {% else %}
                    <p class="text-muted">Pas encore de note.</p>
                {% endif %}
            </div>
        {% endif %}

        {# --- Commentaires --- #}
        <h2 class="mb-3">üí¨ Commentaires</h2>

        {% for commentaire in commentaires %}
            <div class="mb-3 p-3 border rounded shadow-sm bg-light">
                <div class="d-flex justify-content-between">
                    <small class="text-muted">{{ commentaire.date|date('d/m/Y H:i') }}</small>
                    {% if app.user and commentaire.SignalePar is null and commentaire.utilisateur != app.user %}
                        <form method="post" action="{{ path('commentaire_signaler', {'id': commentaire.id}) }}" onsubmit="return confirm('Voulez-vous signaler ce commentaire ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('signaler' ~ commentaire.id) }}">
                            <button class="btn btn-sm btn-warning">Signaler</button>
                        </form>
                    {% endif %}
                </div>
                <p class="mb-1">Note : {{ commentaire.note ?? "non not√©" }}</p>
                <p class="mb-0">{{ commentaire.contenu }}</p>
            </div>
        {% else %}
            <p class="text-muted">Aucun commentaire pour cette recette.</p>
        {% endfor %}

        {% if app.user %}
            <div class="card my-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">‚úçÔ∏è Laisser un commentaire</h5>
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.contenu, 'Votre commentaire') }}
                        {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.note, 'Votre note') }}
                        {{ form_widget(form.note, {'attr': {'class': 'form-control', 'min': 0, 'max': 5}}) }}
                    </div>
                    <button class="btn btn-primary">Envoyer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning mt-4">
                Vous devez <a href="{{ path('app_login') }}" class="alert-link">vous connecter</a> pour commenter.
            </div>
        {% endif %}

        <div class="d-flex gap-2 mt-4">
            <a href="{% if is_granted('ROLE_ADMIN') %}{{ path('recette_liste_admin') }}{% else %}{{ path('recette_mes_recettes') }}{% endif %}" class="btn btn-secondary">
                Retour √† la liste
            </a>
            <a href="{{ path('recette_edit', {'id': recette.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('recette/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
