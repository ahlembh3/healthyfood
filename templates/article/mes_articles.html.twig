{# templates/article/mes_articles.html.twig (exemple) #}
{% extends 'base.html.twig' %}

{% block title %}Mes articles{% endblock %}
{% block page_title %}Mes articles{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="m-0 text-muted">
            Retrouvez ici vos brouillons et articles publiés.
        </p>
        <a href="{{ path('article_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> Nouvel article
        </a>
    </div>

    {% if articles is empty %}
        <div class="alert alert-info text-center" role="status">
            Vous n’avez encore rédigé aucun article.
        </div>
    {% else %}
        <div class="row g-4">
            {% for article in articles %}
                <div class="col-12 col-md-6 col-lg-4">
                    <article class="card h-100 shadow-sm border-0">
                        {# Image avec fallback et lazy-loading #}
                        {% if article.image %}
                            {% set imgSrc = asset('uploads/' ~ article.image) %}
                        {% else %}
                            {% set imgSrc = asset('images/placeholder-article.jpg') %}
                        {% endif %}
                        <img
                                src="{{ imgSrc }}"
                                alt="Illustration : {{ article.titre }}"
                                class="card-img-top"
                                loading="lazy"
                                onerror="this.onerror=null;this.src='{{ asset('images/placeholder-article.jpg') }}'">

                        <div class="card-body d-flex flex-column">
                            <h2 class="h5 card-title">{{ article.titre }}</h2>

                            <p class="text-muted small mb-2">
                                Créé le {{ article.date ? article.date|date('d/m/Y') : '—' }}
                            </p>

                            <p class="mb-2">
                                {% if article.validation %}
                                    <span class="badge bg-success">Validé</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% endif %}
                            </p>

                            <p class="card-text">
                                {{ article.contenu|striptags|u.truncate(120, '…', false) }}
                            </p>

                            <div class="mt-auto d-flex gap-2 flex-wrap">
                                <a href="{{ path('article_show', { id: article.id, from: 'mes' }) }}"
                                   class="btn btn-sm btn-outline-primary"
                                   aria-label="Lire l’article : {{ article.titre }}">
                                    Voir
                                </a>

                                {% if not article.validation %}
                                    <a href="{{ path('article_edit', { id: article.id }) }}"
                                       class="btn btn-sm btn-outline-secondary">
                                        Modifier
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
