{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date de création</th>
                <th>Validations</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.utilisateur.email }}</td>
                <td>{{ article.date ? article.date|date('d/m/Y') : '' }}</td>
                <td>{{ article.validation ? 'Oui' : 'Non' }}</td>
                <td>
                    <div class="d-flex gap-2 mt-4">
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-secondary btn-sm">afficher</a>
                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary btn-sm">modifier</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}" class="btn btn-success">Ajouter un nouvel article</a>
{% endblock %}

