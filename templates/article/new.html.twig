{% extends 'base.html.twig' %}

{% block title %}{{ form_title|default('Nouvel article') }}{% endblock %}

{% block body %}
    {% include 'article/_form.html.twig' with {
        'button_label': form_button|default('Créer'),
        'form_title': form_title|default('Ajouter un article')
    } %}

    <a href="{% if is_granted('ROLE_ADMIN') %}
                    {{ path('article_liste_admin') }}
                 {% else %}
                    {{ path('article_mes_articles') }}
                 {% endif %}" class="btn btn-secondary">
        ← Retour à la liste
    </a>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                };

                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = "#";
                preview.classList.add('d-none');
            }
        }
    </script>
{% endblock %}

