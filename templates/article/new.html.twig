{# templates/article/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ form_title|default('Nouvel article') }}{% endblock %}
{% block page_title %}{{ form_title|default('Ajouter un article') }}{% endblock %}

{% block content %}
    {% include 'article/_form.html.twig' with {
        button_label: form_button|default('Créer'),
        form_title: form_title|default('Ajouter un article')
    } %}

    <div class="mt-3">
        <a href="{% if is_granted('ROLE_ADMIN') %}
                {{ path('article_liste_admin') }}
              {% else %}
                {{ path('article_mes_articles') }}
              {% endif %}"
           class="btn btn-outline-secondary">
            ← Retour à la liste
        </a>
    </div>
{% endblock %}
